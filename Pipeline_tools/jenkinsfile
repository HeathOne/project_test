pipeline {
    agent any

    stages {
        stage('Docker version') {
            steps {
                sh "echo $USER"
                sh 'docker version'      
               }
        }
        stage('Delete workspace before build starts') {
            steps {
                echo 'Deleting workspace'
                deleteDir()
            }
        }
        stage('Test') {
            steps{
                dir('Docker_tools') {
                    sh "ls -la "
                    sh "pwd"
                }
                    sh "ls -la "
                    sh "pwd"
            }
        }
        stage("create") {
            steps {
                echo "=====start build======"
                dir ('Docker_tools') {
                    sh 'docker build . -t pira7 '
                }
            }
        }
   }
}
