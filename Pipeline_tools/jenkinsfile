pipeline {
    agent any

    stages {
        stage('Docker version') {
            steps {
                sh "echo $USER"
                sh 'docker version'
            }
        }
        stage('Checkout') {
            steps{
                git branch: 'main',
                    url: 'https://github.com/bakavets/docker-lessons.git'        
                }
        }
        stage("create") {
            steps {
                echo "=====start build======"
                dir ('/Docker_tools/') {
                    sh 'docker build . -t pira7 '
                }
            }
        }
   }
}
